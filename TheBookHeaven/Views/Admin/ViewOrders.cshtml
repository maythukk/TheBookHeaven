@model IEnumerable<TheBookHeaven.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Manage Orders</h2>

<!-- Filter by Status -->
<div class="mb-4">
    <form method="get" asp-action="ViewOrders">
        <select name="status" class="form-select">
            <option value="">All Orders</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
            <option value="Cancelled">Cancelled</option>
        </select>
        <button type="submit" class="btn btn-primary ms-2">Filter</button>
    </form>
</div>

<!-- Order List Table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td><strong>#@order.OrderId</strong></td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                <td><strong>$@order.TotalPrice.ToString("F2")</strong></td>
                <td>
                    <span class="badge @(order.Status == "Processing" ? "bg-warning" :
                                                                                             order.Status == "Shipped" ? "bg-info" :
                                                                                             order.Status == "Delivered" ? "bg-success" :
                                                                                             order.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                    @order.Status
                </span>
            </td>
            <td>
                <!-- View Order Details -->
                <a href="@Url.Action("Details", "Order", new { id = order.OrderId })"
                   class="btn btn-sm btn-outline-primary me-1">
                    <i class="fas fa-eye"></i> View
                </a>

                    <!-- Change Order Status (only if not cancelled) -->
                @if (order.Status != "Cancelled")
                    {
                        <form method="post" asp-action="UpdateOrderStatus" asp-route-id="@order.OrderId"
                              style="display: inline-block;">
                            <select name="status" class="form-select form-select-sm d-inline-block"
                                    style="width: auto;" required>
                                <option value="Processing" selected="@(order.Status == "Processing")">Processing</option>
                                <option value="Shipped" selected="@(order.Status == "Shipped")">Shipped</option>
                                <option value="Delivered" selected="@(order.Status == "Delivered")">Delivered</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-success ms-1">Update</button>
                        </form>
                    }

                    <!-- Show cancellation request actions only for orders with pending cancellation -->
                    @if (order.CancellationRequested)
                    {
                        <form method="post" asp-action="ApproveCancellation" asp-route-id="@order.OrderId" style="display:inline-block;">
                            <button type="submit" class="btn btn-success btn-sm ms-1">Approve Cancellation</button>
                        </form>
                        <form method="post" asp-action="RejectCancellation" asp-route-id="@order.OrderId" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm ms-1">Reject Cancellation</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="text-center py-4">
        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
        <h4>No Orders Found</h4>
        <p class="text-muted">No orders match the selected criteria.</p>
    </div>
}