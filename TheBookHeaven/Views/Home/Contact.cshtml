@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="mb-3">
            <i class="bi bi-chat-heart display-3 text-success"></i>
        </div>
        <h1 class="display-4 fw-bold text-dark mb-3">Contact Us</h1>
        <p class="lead text-muted">We'd love to hear from you!</p>
    </div>

    <!-- Contact Cards -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Main Contact Info -->
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body p-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-envelope-fill text-primary fs-4"></i>
                            </div>
                            <h5 class="text-primary mb-3">Email Support</h5>
                            <p class="text-muted mb-3">Get in touch with our friendly support team</p>
                            <div class="bg-light rounded p-3">
                                <strong>support@thebookheaven.com</strong>
                            </div>
                            <small class="text-muted mt-2 d-block">Response within 24 hours</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body p-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-telephone-fill text-success fs-4"></i>
                            </div>
                            <h5 class="text-success mb-3">Phone Support</h5>
                            <p class="text-muted mb-3">Speak directly with our customer service</p>
                            <div class="bg-light rounded p-3">
                                <strong>(+65) 1123-4567</strong>
                            </div>
                            <small class="text-muted mt-2 d-block">Mon-Fri, 9AM-6PM SGT</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-question-circle display-6 text-info mb-2"></i>
                        <h4 class="text-info">Frequently Asked Questions</h4>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bi bi-truck text-info"></i>
                                </div>
                                <div>
                                    <h6 class="text-info mb-2">How long does shipping take?</h6>
                                    <p class="text-muted small mb-0">Standard shipping typically takes 3-5 business days</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bi bi-arrow-return-left text-warning"></i>
                                </div>
                                <div>
                                    <h6 class="text-warning mb-2">Can I return a book?</h6>
                                    <p class="text-muted small mb-0">Yes! Books can be returned within 30 days in original condition.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bi bi-credit-card text-success"></i>
                                </div>
                                <div>
                                    <h6 class="text-success mb-2">What payment methods do you accept?</h6>
                                    <p class="text-muted small mb-0">We accept all major credit cards and secure online payments.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="bg-danger bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bi bi-headset text-danger"></i>
                                </div>
                                <div>
                                    <h6 class="text-danger mb-2">Need immediate help?</h6>
                                    <p class="text-muted small mb-0">Call us during business hours for instant assistance!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>