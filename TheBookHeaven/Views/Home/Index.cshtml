@model List<TheBookHeaven.Models.Book>

@{
    ViewData["Title"] = "Home";
}

<div class="px-4">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <img src="~/images/banner.jpeg" class="img-fluid rounded shadow-sm" alt="Welcome Banner" style="max-height: 450px; object-fit: cover;" />
        <h2 class="mt-3">Welcome to TheBookHeaven</h2>
        <p class="text-muted">Discover the best books in every category.</p>
    </div>

    <!-- Section Template -->
    @foreach (var category in new[] { "Best Sellers", "Fiction", "Non-Fiction" })
    {
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>@category</h3>
                <a href="#" class="btn btn-outline-primary btn-sm">View All</a>
            </div>
            <div class="row">
                @foreach (var book in Model.Where(b => b.Category == category))
                {
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                        <div class="card h-100 d-flex flex-column shadow-sm">
                            <img src="@book.ImageUrl"
                                 class="card-img-top"
                                 alt="@book.Title"
                                 style="height: 250px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column p-2">
                                <h6 class="card-title text-truncate" title="@book.Title">@book.Title</h6>
                                <p class="card-text text-muted small mb-2">$@book.Price</p>
                                <button onclick="addToCart(@book.Id)"
                                        class="btn btn-outline-primary btn-sm mt-auto w-100">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
