@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheBookHeaven</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheBookHeaven.styles.css" asp-append-version="true" />

    <style>
        /* Hover dropdown behavior */
        .navbar-nav .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-link.dropdown-toggle::after {
            display: none;
        }

        /* Cart badge styling */
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
            min-width: 18px;
            text-align: center;
        }

        .cart-container {
            position: relative;
            display: inline-block;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm mb-3">
            <div class="container">
                <!-- Site Logo -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">TheBookHeaven</a>

                <!-- Icons for mobile -->
                <div class="d-flex d-lg-none">
                    <a class="nav-link" href="#"><i class="bi bi-search"></i></a>
                    <div class="cart-container">
                        <a class="nav-link" asp-controller="Book" asp-action="Search"><i class="bi bi-search"></i></a>
                        <i class="bi bi-cart"></i>
                        @if (ViewData["CartItemCount"] != null && (int)ViewData["CartItemCount"] > 0)
                        {
                            <span class="cart-badge" id="mobile-cart-count">@ViewData["CartItemCount"]</span>
                        }
                        </a>
                    </div>
                    <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="bi bi-person"></i></a>
                </div>

                <!-- Hamburger menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="Aboutus">AboutUs</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Book" asp-action="Fiction">Fiction</a></li>
                                <li><a class="dropdown-item" asp-controller="Book" asp-action="NonFiction">Non-Fiction</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Order" asp-action="MyOrder">My Orders</a></li>
                    </ul>

                    <!-- Desktop icons and login logic -->
                    <div class="d-none d-lg-flex align-items-center">
                        <a class="nav-link" asp-controller="Book" asp-action="Search"><i class="bi bi-search"></i></a>

                        <!-- Cart with badge -->
                        <div class="cart-container">
                            <a class="nav-link" asp-controller="Book" asp-action="Cart">
                                <i class="bi bi-cart"></i>
                                @if (ViewData["CartItemCount"] != null && (int)ViewData["CartItemCount"] > 0)
                                {
                                    <span class="cart-badge" id="cart-count">@ViewData["CartItemCount"]</span>
                                }
                                else
                                {
                                    <span class="cart-badge" id="cart-count" style="display: none;">0</span>
                                }
                            </a>
                        </div>

                        @* Check if user is logged in *@
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <!-- Logged-in user dropdown -->
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @* Check if the logged-in user is an Admin *@
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <li>
                                            @* Show Dashboard link for Admin *@
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            @* Show Profile link for normal users *@
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a>
                                        </li>
                                    }

                                    <li>
                                        @* Logout option for all users *@
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- Not logged in -->
                            <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="bi bi-person"></i></a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Toast (Cart Notification) -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="cartToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">Item added to cart!</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top text-muted mt-auto py-3">
        <div class="container text-center">
            <div class="mb-2">
                <a href="#"><i class="bi bi-facebook mx-2"></i></a>
                <a href="#"><i class="bi bi-instagram mx-2"></i></a>
                <a href="#"><i class="bi bi-tiktok mx-2"></i></a>
            </div>
            <div>
                <a href="#" class="text-decoration-none me-2">Terms</a> |
                <a href="#" class="text-decoration-none mx-2">Privacy</a> |
                <a href="#" class="text-decoration-none ms-2">Contact</a>
            </div>
            <div class="mt-2">© 2025 - TheBookHeaven</div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Enhanced Global Cart Script -->
    <script>
        // Add to Cart function with stock management
        function addToCart(bookId, event) {
            // Prevent event bubbling to parent elements
            if (event) {
                event.stopPropagation();
                event.preventDefault();
            }

            fetch(`/Book/AddToCart?id=${bookId}`, {
                method: 'GET'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success toast
                    var toast = new bootstrap.Toast(document.getElementById('cartToast'));
                    toast.show();

                    // Update cart count in header (both desktop and mobile)
                    updateCartCount(data.cartCount);

                } else {
                    // Handle out of stock with similar books modal
                    if (data.outOfStock && data.similarBooks && data.similarBooks.length > 0) {
                        showOutOfStockModal(data.similarBooks);
                    } else {
                        // Show error alert
                        showAlert('warning', data.message || 'This item is currently out of stock.');
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('danger', 'An error occurred while adding the item to cart.');
            });
        }

        // Update cart count in header
        function updateCartCount(count) {
            var cartCount = document.getElementById('cart-count');
            var mobileCartCount = document.getElementById('mobile-cart-count');

            if (count > 0) {
                if (cartCount) {
                    cartCount.textContent = count;
                    cartCount.style.display = 'inline';
                }
                if (mobileCartCount) {
                    mobileCartCount.textContent = count;
                    mobileCartCount.style.display = 'inline';
                }
            }
        }

        // Show alert messages
        function showAlert(type, message) {
            const existingAlert = document.querySelector('.alert');
            if (existingAlert) {
                existingAlert.remove();
            }

            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;

            document.body.insertAdjacentHTML('beforeend', alertHtml);

            setTimeout(() => {
                const alert = document.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }

        // Show out of stock modal with similar books
        function showOutOfStockModal(similarBooks) {
            let modal = document.getElementById('outOfStockModal');
            if (!modal) {
                const modalHtml = `
                    <div class="modal fade" id="outOfStockModal" tabindex="-1" aria-labelledby="outOfStockModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="outOfStockModalLabel">
                                        <i class="bi bi-exclamation-triangle text-warning"></i> Out of Stock
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Sorry, this book is currently out of stock. Here are some similar books you might like:</p>
                                    <div id="similarBooksContainer" class="row">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                document.body.insertAdjacentHTML('beforeend', modalHtml);
                modal = document.getElementById('outOfStockModal');
            }

            const container = document.getElementById('similarBooksContainer');
            container.innerHTML = '';

            similarBooks.forEach(book => {
                const bookHtml = `
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="${book.imageUrl}" class="card-img-top" alt="${book.title}" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title">${book.title}</h6>
                                <p class="card-text text-success">$${book.price}</p>
                                <a href="/Book/Details?id=${book.id}" class="btn btn-primary btn-sm">View Details</a>
                                <button onclick="addToCart(${book.id}, event)" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                container.insertAdjacentHTML('beforeend', bookHtml);
            });

            const bootstrapModal = new bootstrap.Modal(modal);
            bootstrapModal.show();
        }

        // Home page specific function for toggle books
        function toggleBooks(category) {
            var moreBooks = document.getElementById(category + '-more-books');
            var button = event.target;

            if (moreBooks && moreBooks.style.display === "none") {
                moreBooks.style.display = "flex";
                button.innerText = "View Less";
            } else if (moreBooks) {
                moreBooks.style.display = "none";
                button.innerText = "View All";
            }
        }

        // Auto-submit form functionality for search page
        document.addEventListener('DOMContentLoaded', function() {
            const categorySelect = document.querySelector('select[name="category"]');
            const sortSelect = document.querySelector('select[name="sortBy"]');

            if (categorySelect) {
                categorySelect.addEventListener('change', function() {
                    this.form.submit();
                });
            }

            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    this.form.submit();
                });
            }
        });
    </script>
</body>
</html>