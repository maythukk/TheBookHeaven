@model List<TheBookHeaven.Models.Book>

@{
    ViewData["Title"] = "Search Books";
}

<div class="px-4">
    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" name="query"
                               value="@ViewBag.Query" placeholder="Search by book title...">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="category">
                        <option value="All">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat" selected="@(ViewBag.SelectedCategory == cat ? "selected" : null)">@cat</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="sortBy">
                        <option value="Title" selected="@(ViewBag.SelectedSort == "Title" ? "selected" : null)">Sort by Title</option>
                        <option value="PriceLowToHigh" selected="@(ViewBag.SelectedSort == "PriceLowToHigh" ? "selected" : null)">Price: Low to High</option>
                        <option value="PriceHighToLow" selected="@(ViewBag.SelectedSort == "PriceHighToLow" ? "selected" : null)">Price: High to Low</option>
                        <option value="Newest" selected="@(ViewBag.SelectedSort == "Newest" ? "selected" : null)">Newest First</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>
            @if (!string.IsNullOrEmpty(ViewBag.Query))
            {
                <span>Search Results for "@ViewBag.Query"</span>
            }
            else
            {
                <span>Browse All Books</span>
            }
        </h2>
        <span class="text-muted">@ViewBag.ResultCount books found</span>
    </div>

    <!-- Books Grid -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="card h-100 d-flex flex-column shadow-sm">
                        <img src="@book.ImageUrl"
                             class="card-img-top"
                             alt="@book.Title"
                             style="height: 250px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column p-2">
                            <h6 class="card-title text-truncate" title="@book.Title">@book.Title</h6>
                            <p class="card-text text-success fw-bold mb-2">$@book.Price</p>
                            <button onclick="addToCart(@book.Id)"
                                    class="btn btn-outline-primary btn-sm mt-auto w-100">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h4 class="mt-3">No books found</h4>
            <p class="text-muted">Try adjusting your search criteria or browse all books.</p>
            <a asp-action="Browse" class="btn btn-primary">Browse All Books</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit form when category or sort changes
        document.querySelector('select[name="category"]').addEventListener('change', function() {
            this.form.submit();
        });

        document.querySelector('select[name="sortBy"]').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}