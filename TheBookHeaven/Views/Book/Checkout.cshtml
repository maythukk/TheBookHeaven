@model List<TheBookHeaven.Models.CartItem>

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h3>Checkout</h3>
    <h5>Review your order:</h5>

    @if (!Model.Any())
    {
        <p>Your cart is empty. Please add items to your cart before proceeding.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Book.ImageUrl" alt="@item.Book.Title" style="width: 70px; height: 100px; object-fit: cover;" class="rounded shadow-sm" />
                            </td>
                            <td>@item.Book.Title</td>
                            <td>$@item.Book.Price</td>
                            <td>@item.Quantity</td>
                            <td>$@(item.Book.Price* item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end">
            <h4>Total: $@Model.Sum(item => item.Book.Price * item.Quantity)</h4>
        </div>

        <div class="text-center mt-4">
            <form asp-action="ConfirmOrder" method="post">
                <button type="submit" class="btn btn-success">Confirm Order</button>
            </form>
        </div>
    }
</div>
